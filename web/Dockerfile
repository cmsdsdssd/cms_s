FROM node:20-alpine AS deps
WORKDIR /app
COPY package*.json ./
RUN npm ci

FROM node:20-alpine AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

ARG NEXT_PUBLIC_SUPABASE_URL
ARG NEXT_PUBLIC_SUPABASE_ANON_KEY
ARG NEXT_PUBLIC_CMS_ACTOR_ID
ARG NEXT_PUBLIC_CMS_ACTOR_TYPE
ARG NEXT_PUBLIC_CMS_CORRELATION_ID

ENV NEXT_PUBLIC_SUPABASE_URL=${NEXT_PUBLIC_SUPABASE_URL}
ENV NEXT_PUBLIC_SUPABASE_ANON_KEY=${NEXT_PUBLIC_SUPABASE_ANON_KEY}
ENV NEXT_PUBLIC_CMS_ACTOR_ID=${NEXT_PUBLIC_CMS_ACTOR_ID}
ENV NEXT_PUBLIC_CMS_ACTOR_TYPE=${NEXT_PUBLIC_CMS_ACTOR_TYPE}
ENV NEXT_PUBLIC_CMS_CORRELATION_ID=${NEXT_PUBLIC_CMS_CORRELATION_ID}

RUN npm run build

FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production
ENV PORT=8080
ENV HOSTNAME=0.0.0.0
COPY --from=builder /app .
EXPOSE 8080
CMD ["npm", "run", "start", "--", "-p", "8080", "-H", "0.0.0.0"]
